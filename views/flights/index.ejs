<% layout("layouts/boilerplate") %>

<%
    let dateObj = new Date();
    dateObj.setDate(dateObj.getDate() + 1);
    let dateISO = dateObj.toISOString().split('T')[0]; // YYYY-MM-DD for input[type=date]
%>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <form action="/" method="post" class="bg-white p-4 rounded-3 shadow-sm">
                <div class="row g-3">
                    <!-- From -->
                    <div class="col-md-2">
                        <label class="form-label fw-bold text-muted small mb-1">FROM</label>
                        <input list="airports" type="text" class="form-control form-control-lg" value="DEL" name="from" required>
                    </div>
                    
                    <!-- To -->
                    <div class="col-md-2">
                        <label class="form-label fw-bold text-muted small mb-1">TO</label>
                        <input list="airports" type="text" class="form-control form-control-lg" value="MAA" name="to" required>
                    </div>
                    
                    <datalist id="airports">
                        <% for (let airport of airports) { %>
                            <option value=<%= airport.IATA_code %>><%= airport.city_name %></option>
                        <% } %>
                    </datalist>
                    
                    <!-- Date -->
                    <div class="col-md-2">
                        <label class="form-label fw-bold text-muted small mb-1">DEPARTURE</label>
                        <input type="date" class="form-control form-control-lg" id="date" name="date" value="<%= dateISO %>" min="<%= dateISO %>" required>
                    </div>
                    
                    <!-- Passengers -->
                    <div class="col-md-2">
                        <label class="form-label fw-bold text-muted small mb-1">TRAVELLERS</label>
                        <select class="form-select form-select-lg" id="passengerCount" name="passengerCount" required>
                            <option value="1">1 Adult</option>
                            <option value="2">2 Adults</option>
                            <option value="3">3 Adults</option>
                            <option value="4">4 Adults</option>
                            <option value="5">5 Adults</option>
                            <option value="6">6 Adults</option>
                        </select>
                    </div>
                    
                    <!-- Class -->
                    <div class="col-md-2">
                        <label class="form-label fw-bold text-muted small mb-1 d-block">CLASS</label>
                        <div class="btn-group w-100" role="group">
                            <input type="radio" class="btn-check" name="group" id="group1" autocomplete="off" value="Economy" checked>
                            <label class="btn btn-outline-secondary" for="group1">Econ</label>
                            
                            <input type="radio" class="btn-check" name="group" id="group2" autocomplete="off" value="Premium">
                            <label class="btn btn-outline-secondary" for="group2">Prem</label>
                            
                            <input type="radio" class="btn-check" name="group" id="group3" autocomplete="off" value="Business">
                            <label class="btn btn-outline-secondary" for="group3">Buss.</label>
                        </div>
                    </div>
                    
                    <!-- Search Button -->
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-search me-2"></i>Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="/scripts/datePicker.js"></script>

