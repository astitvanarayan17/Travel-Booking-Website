<%- include('partials/header') %>

    <section class="hero">
        <img src="https://www.treehugger.com/thmb/5u2-sxLVqD1ARBcD_x0esdPdrvI=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/GettyImages-463523885-f1a1ad81230c4fc59d42552090073377.jpg" class="hero-bg" alt="Hero Background">
        <div class="hero-overlay">
            <h1>Travel Expo</h1>
            <p>Book. Pack. Fly. <span style="font-size:1rem;">(Explore more. Worry less.)</span></p>
        </div>
    </section>

    <form action="/flights/book" method="POST" class="search-wrapper modern-flight-form">
        <div class="modern-form-row">
            <div class="modern-form-col">
                <label for="from">From</label>
                <input type="text" id="from" name="from" placeholder="City or Airport" required>
            </div>
            <div class="modern-form-col">
                <label for="to">To</label>
                <input type="text" id="to" name="to" placeholder="City or Airport" required>
            </div>
            <div class="modern-form-col">
                <label for="departureDate">Departure</label>
                <input type="date" id="departureDate" name="departureDate" required>
            </div>
            <div class="modern-form-col">
                <label for="returnDate">Return</label>
                <input type="date" id="returnDate" name="returnDate">
            </div>
            <div class="modern-form-col">
                <label for="travellers">Travellers</label>
                <input type="number" id="travellers" name="travellers" min="1" value="1" required>
            </div>
            <div class="modern-form-col">
                <label for="travelClass">Class</label>
                <select id="travelClass" name="travelClass">
                    <option value="Economy">Economy</option>
                    <option value="Premium">Premium</option>
                    <option value="Business">Business</option>
                </select>
            </div>
        </div>
        <div class="modern-form-actions">
            <button type="submit" class="modern-search-btn">Search Flights</button>
        </div>
    </form>

    <!-- Replace the Get Inspired section with the Wonders of India cards -->
    <div class="inspiration-section wonders-section">
        <h2>Unlock Lesser-Known Wonders of India</h2>
        <div class="wonders-cards-row">
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80" alt="Shimla's Best Kept Secret">
                <div class="wonders-card-title">Shimla's Best Kept Secret</div>
            </div>
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=400&q=80" alt="Tamil Nadu's Charming Hill Town">
                <div class="wonders-card-title">Tamil Nadu's Charming Hill Town</div>
            </div>
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=400&q=80" alt="Picturesque Gateway to Himalayas">
                <div class="wonders-card-title">Picturesque Gateway to Himalayas</div>
            </div>
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=400&q=80" alt="Quaint Little Hill Station in Gujarat">
                <div class="wonders-card-title">Quaint Little Hill Station in Gujarat</div>
            </div>
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1502086223501-7ea6ecd79368?auto=format&fit=crop&w=400&q=80" alt="A pleasant summer retreat and a snowy winter wonderland!">
                <div class="wonders-card-title">A pleasant summer retreat and a snowy winter wonderland!</div>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> BookNFly. All rights reserved.</p>
    </footer>
</body>
</html>
