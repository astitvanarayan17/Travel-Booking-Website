<%- include('partials/header') %>

    <section class="hero">
        <img src="https://www.treehugger.com/thmb/5u2-sxLVqD1ARBcD_x0esdPdrvI=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/GettyImages-463523885-f1a1ad81230c4fc59d42552090073377.jpg" class="hero-bg" alt="Hero Background">
        <div class="hero-overlay">
            <h1>Travel Expo</h1>
            <p>Book. Pack. Fly. <span style="font-size:1rem;">(Explore more. Worry less.)</span></p>
        </div>
    </section>

    <form action="/flights/book" method="POST" class="search-wrapper flight-search-ui">
        <div class="search-tabs">
            <button class="active" type="button"><span style="color:#2196f3;font-size:1.2em;">&#9679;</span> One Way</button>
            <button type="button">Round Trip</button>
            <button type="button">Multi City</button>
        </div>
        <div class="search-form-row">
            <div class="search-form-col from">
                <label>From</label>
                <div class="search-big-text">
                    <input type="text" name="from" value="Delhi" required style="border:none;background:transparent;font-size:inherit;width:100%;">
                </div>
                <div class="search-small-text">DEL, Delhi Airport India</div>
            </div>
            <div class="search-form-col swap">
                <button class="swap-btn" type="button">&#8646;</button>
            </div>
            <div class="search-form-col to">
                <label>To</label>
                <div class="search-big-text">
                    <input type="text" name="to" value="Bengaluru" required style="border:none;background:transparent;font-size:inherit;width:100%;">
                </div>
                <div class="search-small-text">BLR, Bengaluru International Airport ...</div>
            </div>
            <div class="search-form-col date">
                <label>Departure</label>
                <div class="search-big-text">
                    <input type="date" name="departureDate" required style="border:none;background:transparent;font-size:inherit;">
                </div>
                <div class="search-small-text">Wednesday</div>
            </div>
            <div class="search-form-col date">
                <label>Return</label>
                <div class="search-big-text search-grey">
                    <input type="date" name="returnDate" style="border:none;background:transparent;font-size:inherit;">
                </div>
            </div>
            <div class="search-form-col travelers">
                <label>Travellers & Class</label>
                <div class="search-big-text">
                    <input type="number" name="travellers" min="1" value="1" required style="border:none;background:transparent;font-size:inherit;width:60px;">
                </div>
                <div class="search-small-text">
                    <select name="travelClass" style="border:none;background:transparent;font-size:inherit;">
                        <option value="Economy">Economy/Premium Economy</option>
                        <option value="Business">Business</option>
                    </select>
                </div>
            </div>
            <!-- Car Booking Column -->
            <div class="search-form-col car">
                <label>Car</label>
                <div class="search-big-text">
                    <input type="text" name="carLocation" placeholder="Pick-up location" style="border:none;background:transparent;font-size:inherit;width:100%;">
                </div>
                <div class="search-small-text">Optional</div>
            </div>

            <!-- Train Booking Column -->
            <div class="search-form-col train">
                <label>Train</label>
                <div class="search-big-text">
                    <input type="text" name="trainRoute" placeholder="From - To" style="border:none;background:transparent;font-size:inherit;width:100%;">
                </div>
                <div class="search-small-text">Optional</div>
            </div>
        </div>
        <div class="special-fare-row">
            <span class="special-fare-label">Select a special fare</span>
            <span class="extra-savings">EXTRA SAVINGS</span>
            <button class="fare-btn active" type="button">Regular<br><span>Regular fares</span></button>
            <button class="fare-btn" type="button">Student<br><span>Extra discounts/baggage</span></button>
            <button class="fare-btn" type="button">Senior Citizen<br><span>Up to ₹ 600 off</span></button>
            <button class="fare-btn" type="button">Armed Forces<br><span>Up to ₹ 600 off</span></button>
            <button class="fare-btn" type="button">Doctor and Nurses<br><span>Up to ₹ 600 off</span></button>
            <span class="flight-tracker">✈️ Flight Tracker <span class="new-badge">new</span></span>
        </div>
        <div class="flexifly-row">
            <label><input type="checkbox" name="flexifly"> <b>Add FlexiFly</b> 100% refund on cancellation or Zero date change charges <a href="#">View Details</a></label>
        </div>
        <div class="search-btn-row">
            <button class="search-btn-main" type="submit">SEARCH</button>
        </div>
    </form>

    <!-- Replace the Get Inspired section with the Wonders of India cards -->
    <div class="inspiration-section wonders-section">
        <h2>Unlock Lesser-Known Wonders of India</h2>
        <div class="wonders-cards-row">
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80" alt="Shimla's Best Kept Secret">
                <div class="wonders-card-title">Shimla's Best Kept Secret</div>
            </div>
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=400&q=80" alt="Tamil Nadu's Charming Hill Town">
                <div class="wonders-card-title">Tamil Nadu's Charming Hill Town</div>
            </div>
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=crop&w=400&q=80" alt="Picturesque Gateway to Himalayas">
                <div class="wonders-card-title">Picturesque Gateway to Himalayas</div>
            </div>
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=crop&w=400&q=80" alt="Quaint Little Hill Station in Gujarat">
                <div class="wonders-card-title">Quaint Little Hill Station in Gujarat</div>
            </div>
            <div class="wonders-card">
                <img src="https://images.unsplash.com/photo-1502086223501-7ea6ecd79368?auto=format&fit=crop&w=400&q=80" alt="A pleasant summer retreat and a snowy winter wonderland!">
                <div class="wonders-card-title">A pleasant summer retreat and a snowy winter wonderland!</div>
            </div>
        </div>
    </div>

    <footer>
        <p>&copy; <%= new Date().getFullYear() %> BookNFly. All rights reserved.</p>
    </footer>
</body>
</html>
